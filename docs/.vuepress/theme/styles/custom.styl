::-webkit-scrollbar
  width 5px
  height 5px

::-webkit-scrollbar-thumb
  background-color rgba(0, 0, 0, 0.3)
  border-radius 5px

.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8

  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

.fold-wrapper
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  position relative
  background-color #f0f4f8

  input
    display block
    width 100%
    height 2rem
    margin 1em 0
    position absolute
    top 0
    left 0
    cursor pointer
    opacity 0
    z-index 2
    -webkit-touch-callout none

  .fold-header
    .arrow
      display inline-block
      transform rotate(0)
      transition: transform 0.3s linear;

    .title
      margin-left 0.5rem
      font-weight bold

  .fold-content
    display none

.fold-wrapper input:checked ~ .fold-header
  .arrow
    transform rotate(90deg)

.fold-wrapper input:checked ~ .fold-content
  display block
