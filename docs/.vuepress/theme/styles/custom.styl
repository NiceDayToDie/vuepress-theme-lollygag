::-webkit-scrollbar
    width 5px
    height 8px
    background-color #FFFFFF

::-webkit-scrollbar-thumb
    background-color rgba($accentColor, 0.3)
    border-radius 5px

.go-to-top
    bottom 5.5rem !important

.theorem
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    background-color #f0f4f8

    .title
        font-size 1.2rem
        font-weight bold

.custom-block
    &.right
        color transparentify($textColor, 0.4)
        font-size 0.9rem
        text-align right

.fold-wrapper
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    position relative
    background-color #f0f4f8

    input
        display block
        width 100%
        height 2rem
        margin 1em 0
        position absolute
        top 0
        left 0
        cursor pointer
        opacity 0
        z-index 2
        -webkit-touch-callout none

    .fold-header
        .arrow
            display inline-block
            transform rotate(0)
            transition: transform 0.3s linear;

        .title
            margin-left 0.5rem
            font-weight bold

    .fold-content
        position absolute
        transform scale(0)
        opacity 0
        transition opacity 0.3s linear

.fold-wrapper input:checked ~ .fold-header
    .arrow
        transform rotate(90deg)

.fold-wrapper input:checked ~ .fold-content
    position static
    transform scale(1)
    opacity 1
